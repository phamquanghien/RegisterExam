@model JavaExamFinal.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm mới Sinh viên</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <input type="hidden" asp-for="FullName" /> *@
            @* <input type="hidden" class="form-check-input" asp-for="IsActive" checked /> *@
            <div class="form-group">
                <label class="control-lable">Mã xác thực:</label>
                <input type="password" name="Security" required class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <input asp-for="StudentID" class="form-control" />
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <input hidden value="FulName" asp-for="FullName" class="form-control" />
            <div class="form-group">
                <label asp-for="SubjectGroup" class="control-label"></label>
                <input asp-for="SubjectGroup" class="form-control" />
                <span asp-validation-for="SubjectGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <select asp-for="Subject" class="form-control">
                    <option value="" disabled selected>Chọn học phần</option>
                    <option value="THVPNC">Tin học Văn phòng Nâng cao</option>
                    <option value="TMDT">Thương mại Điện tử</option>
                    <option value="JavaOOP">Lập trình Hướng Đối tượng với Java</option>
                </select>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <input hidden checked class="form-check-input" asp-for="IsActive" />
            <hr>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Danh sách Sinh viên</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
